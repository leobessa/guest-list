- title "New Invitation"

- semantic_form_for @invitation do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name
    = f.input :guests, :collection => Guest.without_invitation, :as => :check_boxes, :wrapper_html => { :class => 'autosuggest' }
  - f.buttons do
    = f.commit_button

%p= link_to "Back to List", invitations_path
