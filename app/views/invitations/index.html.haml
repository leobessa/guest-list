- title "Invitations"

%table
  %tr
    %th Name
    %th Phone
    %th Guests
    %th Essential Count
    %th Total Count
  - for invitation in @invitations
    %tr
      %td= h invitation.name
      %td= h invitation.phone
      %td= invitation.guests.map{|g| link_to(g.name, edit_guest_path(g),:style => g.essential? ? '' : 'text-decoration: Line-through')}.join(',')
      %td= invitation.guests.select(&:essential).size
      %td= invitation.guests.count
      %td= link_to 'Show', invitation
      %td= link_to 'Edit', edit_invitation_path(invitation)
      %td= link_to 'Destroy', invitation, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Invitation", new_invitation_path
